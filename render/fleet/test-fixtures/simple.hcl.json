{
    "name": "test",
    "constraints": [
        {
            "attribute": "meta.core",
            "value": "true"
        }
    ],
    "groups": [
        {
            "name": "couchdb",
            "count": 1,
            "tasks": [
                {
                    "name": "couchdb",
                    "image": "couchdb:latest",
                    "private-frontends": [
                        {
                            "port": 5984,
                            "register-instance": true
                        }
                    ]
                }
            ]
        },
        {
            "name": "db",
            "count": 1,
            "tasks": [
                {
                    "name": "db",
                    "image": "redis:latest",
                    "volumes": [
                        "/etc:/etc",
                        "/var/run/docker.sock:/tmp/docker.sock"
                    ],
                    "private-frontends": [
                        {
                            "port": 80,
                            "users": [
                                {
                                    "name": "admin",
                                    "password": "dummy"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "dummy",
            "count": 3,
            "tasks": [
                {
                    "name": "dummy",
                    "image": "alpine:latest",
                    "docker-args": [
                        "--net=host"
                    ]
                }
            ]
        },
        {
            "name": "global",
            "count": 1,
            "global": true,
            "tasks": [
                {
                    "name": "global",
                    "image": "alpine:latest"
                }
            ]
        },
        {
            "name": "gogs",
            "count": 1,
            "tasks": [
                {
                    "name": "gogs",
                    "image": "gogs:latest",
                    "ports": [
                        "80",
                        "22"
                    ],
                    "frontends": [
                        {
                            "port": 80,
                            "host-port": 4200
                        },
                        {
                            "port": 22,
                            "host-port": 8222,
                            "mode": "tcp"
                        }
                    ]
                }
            ]
        },
        {
            "name": "host",
            "count": 1,
            "tasks": [
                {
                    "name": "host",
                    "image": "redis:latest",
                    "network": "host"
                }
            ]
        },
        {
            "name": "registrator",
            "count": 1,
            "global": true,
            "tasks": [
                {
                    "name": "registrator",
                    "image": "gliderlabs/registrator:latest",
                    "volumes": [
                        "/var/run/docker.sock:/tmp/docker.sock"
                    ],
                    "args": [
                        "etcd://${COREOS_PRIVATE_IPV4}:4001/pulcy"
                    ],
                    "capabilities": [
                        "IPC_LOCK"
                    ]
                }
            ]
        },
        {
            "name": "some_domain_proxy",
            "count": 1,
            "tasks": [
                {
                    "name": "some_domain_proxy",
                    "image": "",
                    "type": "proxy",
                    "target": "test.couchdb.couchdb",
                    "rewrites": [
                        {
                            "domain": "newdomain.com"
                        }
                    ],
                    "frontends": [
                        {
                            "domain": "obsoletedomain.com"
                        }
                    ]
                }
            ]
        },
        {
            "name": "some_proxy",
            "count": 1,
            "tasks": [
                {
                    "name": "some_proxy",
                    "image": "",
                    "type": "proxy",
                    "target": "test.couchdb.couchdb",
                    "rewrites": [
                        {
                            "path-prefix": "/_db/foo/app"
                        }
                    ],
                    "private-frontends": [
                        {
                            "port": 80
                        }
                    ]
                }
            ]
        },
        {
            "name": "weave",
            "count": 1,
            "tasks": [
                {
                    "name": "weave",
                    "image": "redis:latest",
                    "network": "weave",
                    "args": [
                        "tcp://test.weave.weave.weave.local:6379"
                    ],
                    "environment": {
                        "url": "http://test.weave.weave.weave.local"
                    }
                }
            ]
        },
        {
            "name": "weave2",
            "count": 1,
            "tasks": [
                {
                    "name": "weave2",
                    "image": "redis:latest",
                    "network": "weave"
                }
            ]
        },
        {
            "name": "web",
            "count": 2,
            "constraints": [
                {
                    "attribute": "meta.web",
                    "value": "true"
                },
                {
                    "attribute": "node.id",
                    "value": "123456789"
                }
            ],
            "tasks": [
                {
                    "name": "backup",
                    "type": "oneshot",
                    "timer": "hourly",
                    "image": "mybackup:latest"
                },
                {
                    "name": "nginx",
                    "image": "alpine:3.2",
                    "args": [
                        "ls",
                        "-al",
                        "--db",
                        "http://test.couchdb.couchdb.private:81"
                    ],
                    "environment": {
                        "key": "123",
                        "name": "ewout",
                        "envkey": "test-env",
                        "cattest": "This is the content of file.txt",
                        "quotetest": "hello",
                        "replacetest": "1.2.3",
                        "opttest1": "value1",
                        "opttest2": "value2",
                        "opttestenv": "test-env"
                    },
                    "links": [
                        {
                            "target": "test.couchdb.couchdb"
                        }
                    ],
                    "volumes-from": [
                        "storage"
                    ],
                    "http-check-path": "/",
                    "frontends": [
                        {
                            "path-prefix": "/"
                        },
                        {
                            "domain": "foo.com",
                            "weight": 10
                        },
                        {
                            "domain": "foo2.com",
                            "path-prefix": "/foo2",
                            "ssl-cert": "pulcy.pem",
                            "users": [
                                {
                                    "name": "tester",
                                    "password": "foo"
                                }
                            ],
                            "weight": 12
                        }
                    ]
                },
                {
                    "name": "storage",
                    "image": "mystorage:latest",
                    "links": [
                        {
                            "target": "job.redis.master",
                            "type": "tcp",
                            "ports": [
                                6379
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}