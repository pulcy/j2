{
    "name": "secrets",
    "groups": [{
        "name": "env_secrets",
        "count": 1,
        "tasks": [{
            "name": "env_secrets",
            "image": "alpine:3.2",
            "args": [
                "--key",
                "${MYSECRET_KEY}"
            ],
            "secrets": [{
                "path": "secret/foo",
                "environment": "MYSECRET_KEY",
                "field": "somevalue"
            }, {
                "path": "secret/certificates/api.pulcy.com",
                "file": "/config/cert.pem"
            }]
        }]
    }]
}
